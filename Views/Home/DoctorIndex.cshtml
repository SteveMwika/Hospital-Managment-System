@{
    ViewData["Title"] = "Doctor Dashboard";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .hero {
            position: relative;
            background: url('https://cdn.pixabay.com/photo/2017/08/06/11/22/stethoscope-2593663_960_720.jpg') center center / cover no-repeat;
            height: 50vh;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            overflow: hidden;
        }

        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.7));
            z-index: 1;
        }

        .hero h1 {
            font-size: clamp(2.5rem, 5vw, 4rem); /* Responsive font size */
            font-weight: bold;
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.9);
            z-index: 2; /* Ensure it appears above the overlay */
            font-family: 'Poppins', sans-serif; /* Modern font */
            line-height: 1.2;
        }

        .hero p {
            font-size: clamp(1rem, 2vw, 1.5rem); /* Responsive font size */
            margin-top: 10px;
            text-shadow: 1px 1px 6px rgba(0, 0, 0, 0.8);
            z-index: 2; /* Ensure it appears above the overlay */
            font-family: 'Roboto', sans-serif; /* Complementary font */
            line-height: 1.5;
            max-width: 80%;
        }

        section {
            padding: 2rem 0;
        }

        .features .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

        .features .card:hover {
            transform: translateY(-5px);
        }

        .features .card i {
            font-size: 3rem;
            margin-bottom: 15px;
            color: #007bff;
        }

        .quick-links a {
            display: block;
            margin-bottom: 10px;
            text-decoration: none;
            font-size: 1.2rem;
            color: #007bff;
        }

        .quick-links a:hover {
            text-decoration: underline;
        }

        .footer {
            background: #343a40;
            color: white;
            text-align: center;
            padding: 1rem 0;
        }
    </style>
}

<!-- Hero Section -->
<div class="hero">
    <h1>@ViewBag.DoctorName</h1>
    <p>Your personalized dashboard for managing patients, appointments, and more.</p>
</div>

<!-- Quick Links Section -->
<section id="quick-links" class="bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Quick Access</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <a href="/Appointments/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-calendar-check"></i> My Appointments
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Patients/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-users"></i> My Patients
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Prescriptions/DoctorPatients" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-file-prescription"></i> Prescriptions
                </a>
            </div>
            <div class="col-md-3">
                <a href="/LabTests/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-vials"></i> Lab Tests
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features">
    <div class="container">
        <h2 class="text-center mb-5">Features & Resources</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center p-3">
                    <i class="fas fa-stethoscope text-primary"></i>
                    <h4 class="mt-3">Patient Management</h4>
                    <p>Easily view and manage your patient list, including their medical history and active prescriptions.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center p-3">
                    <i class="fas fa-notes-medical text-success"></i>
                    <h4 class="mt-3">Appointment Scheduling</h4>
                    <p>Stay organized with your appointments and efficiently manage your daily schedule.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center p-3">
                    <i class="fas fa-laptop-medical text-danger"></i>
                    <h4 class="mt-3">Digital Prescriptions</h4>
                    <p>Generate and manage prescriptions for your patients with a user-friendly interface.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<div class="footer">
    <p>&copy; 2024 Hospital Management System. All Rights Reserved.</p>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
}

