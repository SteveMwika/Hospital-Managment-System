@{
    ViewData["Title"] = "Patient Dashboard";
}

@section Styles {
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .hero {
            background: url('https://cdn.pixabay.com/photo/2017/08/06/11/22/stethoscope-2593663_960_720.jpg') center center / cover no-repeat;
            height: 50vh;
            color: white;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

            .hero h1 {
                font-size: 3rem;
                font-weight: bold;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            }

            .hero p {
                font-size: 1.2rem;
                margin-top: 10px;
                text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
            }

        section {
            padding: 2rem 0;
        }

        .features .card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .features .card:hover {
                transform: translateY(-5px);
            }

            .features .card i {
                font-size: 3rem;
                margin-bottom: 15px;
                color: #007bff;
            }

        .quick-links a {
            display: block;
            margin-bottom: 10px;
            text-decoration: none;
            font-size: 1.2rem;
            color: #007bff;
        }

            .quick-links a:hover {
                text-decoration: underline;
            }

        .footer {
            background: #343a40;
            color: white;
            text-align: center;
            padding: 1rem 0;
        }
    </style>
}

<!-- Hero Section -->
<div class="hero">
    <h1>@ViewBag.PatientName</h1>
    <p>Your personalized dashboard for managing patients, appointments, and more.</p>
</div>

<!-- Quick Links Section -->
<section id="quick-links" class="bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Quick Access</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <a href="/Appointments/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-calendar-check"></i> My Appointments
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Prescriptions/PatientPrescriptions" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-file-prescription"></i> My Prescriptions
                </a>
            </div>
            <div class="col-md-3">
                <a href="/LabTests/PatientTests" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-vials"></i> My Lab Tests
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Billing/MyBilling" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-wallet"></i> My Billing
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features">
    <div class="container">
        <h2 class="text-center mb-5">Features & Resources</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card text-center p-3">
                    <i class="fas fa-notes-medical text-primary"></i>
                    <h4 class="mt-3">Appointments</h4>
                    <p>View and manage your upcoming and past appointments with ease.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center p-3">
                    <i class="fas fa-pills text-success"></i>
                    <h4 class="mt-3">Prescriptions</h4>
                    <p>Access your active prescriptions and detailed medication history.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center p-3">
                    <i class="fas fa-laboratory text-danger"></i>
                    <h4 class="mt-3">Lab Tests</h4>
                    <p>Track lab test orders and access results conveniently online.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Footer -->
<div class="footer">
    <p>&copy; 2024 Hospital Management System. All Rights Reserved.</p>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
}
