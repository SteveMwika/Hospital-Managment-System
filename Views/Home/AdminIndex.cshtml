@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="hero">
    <h1>Welcome, Admin @User.Identity.Name!</h1>
    <p>Your centralized dashboard for managing hospital operations.</p>
</div>

<section id="admin-links" class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Quick Access</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <a href="/Patients/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-user-injured"></i> Manage Patients
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Appointments/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-calendar-check"></i> Manage Appointments
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Departments/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-building"></i> Manage Departments
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Doctors/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-user-md"></i> Manage Doctors
                </a>
            </div>
        </div>
        <div class="row text-center mt-4">
            <div class="col-md-3">
                <a href="/MedicineInventoryLogs/Index" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-pills"></i> Manage Medicines
                </a>
            </div>
            <div class="col-md-3">
                <a href="/LabTests/AdminIndex" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-vials"></i> Manage Lab Tests
                </a>
            </div>
            <div class="col-md-3">
                <a href="/Prescriptions/AdminViewPrescriptions" class="btn btn-outline-primary btn-lg w-100">
                    <i class="fas fa-file-medical"></i> Manage Prescriptions
                </a>
            </div>
        </div>
    </div>
</section>

