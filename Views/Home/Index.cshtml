@{
    ViewData["Title"] = "Home Page";
}

<style>
    /* Full Page Styling */
    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        height: 100%;
        width: 100%;
        overflow-x: hidden;
    }

    /* Hero Section */
    .hero {
        width: 100vw;
        height: 100vh;
        background: url('https://cdn.pixabay.com/photo/2016/11/14/03/05/surgery-1822458_640.jpg') center center / cover no-repeat;
        position: relative;
        color: white;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(41, 128, 185, 0.75); /* Adds a blue tint to the image */
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero h1 {
        font-size: 3.5rem;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    }

    .hero p {
        font-size: 1.5rem;
        margin-bottom: 2rem;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .hero .btn-primary, .hero .btn-secondary {
        padding: 1rem 2rem;
        font-size: 1.25rem;
        border: none;
        transition: all 0.3s ease;
    }

    .hero .btn-primary {
        background: #3498db;
        color: white;
    }

        .hero .btn-primary:hover {
            background: #2980b9;
        }

    .hero .btn-secondary {
        background: #2ecc71;
        color: white;
    }

        .hero .btn-secondary:hover {
            background: #27ae60;
        }

    /* Layers on the left and right of the page */
    .side-background {
        position: absolute;
        top: 0;
        height: 100%;
        width: 10vw;
        background: url('https://media.gettyimages.com/id/1312706413/photo/modern-hospital-building.jpg?s=612x612&w=gi&k=20&c=1-EC4Mxf--5u4ItDIzrIOrduXlbKRnbx9xWWtiifrDo=') center center / cover no-repeat;
        z-index: 0;
    }

        .side-background.left {
            left: 0;
        }

        .side-background.right {
            right: 0;
        }

    /* Features Section */
    .features-section {
        padding: 3rem 0;
        text-align: center;
        background-color: #ecf0f1;
    }

        .features-section h2 {
            margin-bottom: 2rem;
            font-size: 2.5rem;
            color: #2c3e50;
        }

        .features-section .feature {
            padding: 2rem;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0px 5px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

    .feature i {
        font-size: 3rem;
        color: #3498db;
        margin-bottom: 1rem;
    }

    .feature h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        color: #2c3e50;
    }

    .feature p {
        font-size: 1rem;
        color: #7f8c8d;
    }

    /* Footer Section */
    .footer {
        background-color: #2c3e50;
        padding: 2rem 0;
        text-align: center;
        color: white;
    }

        .footer p {
            margin: 0;
        }

</style>

<!-- Hero Section -->
<div class="hero">
    <div class="hero-overlay"></div>
    <div class="side-background left"></div>
    <div class="side-background right"></div>
    <div class="hero-content">
        <h1>Welcome to Our Hospital Management System</h1>
        <p>Delivering world-class healthcare services for both patients and doctors</p>
        <a href="/Account/Login" class="btn btn-primary">Login to Your Account</a>
        <a href="/Account/Register" class="btn btn-secondary ml-3">Register as a Patient</a>
    </div>
</div>

<!-- Features Section -->
<div class="container features-section">
    <h2>Why Choose Our System?</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="feature">
                <i class="bi bi-calendar-check"></i>
                <h3>Appointment Scheduling</h3>
                <p>Easily manage and schedule appointments for both patients and doctors.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature">
                <i class="bi bi-file-earmark-medical"></i>
                <h3>Lab Test Management</h3>
                <p>Effortlessly order, track, and view lab test results with a streamlined interface.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="feature">
                <i class="bi bi-person-square"></i>
                <h3>Patient Records</h3>
                <p>Securely manage patient information with privacy and efficiency.</p>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<div class="footer">
    <p>&copy; 2024 Hospital Management System. All Rights Reserved.</p>
</div>
