@model Hospital_Managment_System.Models.ViewModels.AppointmentCreateViewModel

@{
    ViewData["Title"] = "Create Appointment";
}

<h2>Create Appointment</h2>

<div class="container">
    <form asp-action="Create" method="post" class="mt-4">
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Appointment Date -->
        <div class="form-group mb-3">
            <label asp-for="AppointmentDate" class="form-label">Appointment Date</label>
            <input asp-for="AppointmentDate" class="form-control" type="datetime-local" required />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <!-- Patient Selection -->
        <div class="form-group mb-3">
            <label asp-for="PatientId" class="form-label">Select Patient</label>
            <select asp-for="PatientId" class="form-select" required>
                <option value="">-- Select Patient --</option>
                @foreach (var patient in ViewData["PatientId"] as SelectList)
                {
                    <option value="@patient.Value">@patient.Text</option>
                }
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <!-- Doctor Selection (Hidden for Doctor) -->
        <input type="hidden" asp-for="SelectedDoctorId" value="@Model.DoctorList.FirstOrDefault()?.Value" />

        <!-- Appointment Status (Optional Display) -->
        <div class="form-group mb-3">
            <label asp-for="AppointmentStatus" class="form-label">Appointment Status</label>
            <select asp-for="AppointmentStatus" class="form-select" disabled>
                <option>@Model.AppointmentStatus</option>
            </select>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Create Appointment</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
