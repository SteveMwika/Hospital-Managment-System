@model Hospital_Managment_System.Models.ViewModels.AppointmentCreateViewModel

@{
    ViewData["Title"] = "My Details and Create Appointment";
}

<div class="container settings-page">
    <!-- Existing Patient Details Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">My Details</h2>
        <div class="d-flex align-items-center">
            @if (Model.PatientId.HasValue)
            {
                    <a asp-controller="Doctors" asp-action="Details" asp-route-id="@Model.SelectedDoctorId" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-person-badge"></i> My Doctor
                    </a>
            }

            <!-- Edit button for patient with gear icon -->
            <a asp-controller="Patients" asp-action="Edit" asp-route-id="@Model.PatientId" class="btn btn-secondary btn-lg" title="Edit Patient Information">
                <i class="bi bi-gear"></i>
            </a>
        </div>
    </div>
    <hr />

    <!-- Existing Patient Information Display -->
    <!-- ... (Your existing patient details code) ... -->

    <hr />

    <!-- Appointment Creation Form for Patients -->
    <h3 class="text-primary">Create a New Appointment</h3>
    <div class="card shadow-sm border-primary p-4 mb-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- Appointment Date -->
            <div class="form-group mb-3">
                <label asp-for="AppointmentDate" class="form-label">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" type="datetime-local" required />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <!-- Doctor Selection -->
            <div class="form-group mb-3">
                <label asp-for="SelectedDoctorId" class="form-label">Select Doctor</label>
                <select asp-for="SelectedDoctorId" class="form-select" required>
                    <option value="">-- Select Doctor --</option>
                    @foreach (var doctor in Model.DoctorList)
                    {
                            <option value="@doctor.Value">@doctor.Text</option>
                    }
                </select>
                <span asp-validation-for="SelectedDoctorId" class="text-danger"></span>
            </div>

            <!-- Hidden PatientId -->
            <input type="hidden" asp-for="PatientId" />

            <!-- Submit Button -->
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Create Appointment</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
