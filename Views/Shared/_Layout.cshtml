<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital_Managment_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital_Managment_System.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Hospital_Managment_System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Patients" asp-action="Index">Manage Patients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Doctors" asp-action="Index">Manage Doctors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Manage Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Departments" asp-action="Index">Manage Departments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Medicines" asp-action="Index">Manage Medicines</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="LabTests" asp-action="Index">Manage Lab Tests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Prescriptions" asp-action="Index">Manage Prescriptions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Billing" asp-action="Index">Manage Billing</a>
                            </li>
                            <!-- Add other Admin-specific links here -->
                        }
                        @if (User.IsInRole("Doctor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="MyAppointments">My Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Patients" asp-action="MyPatients">My Patients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Prescriptions" asp-action="MyPrescriptions">My Prescriptions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="LabTests" asp-action="Index">Lab Tests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Doctors" asp-action="Index">Doctors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Doctors" asp-action="MyProfile">My Profile</a>
                            </li>
                            
                            <!-- Add other Doctor-specific links here -->
                        }
                        @if (User.IsInRole("Patient"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Appointments" asp-action="MyAppointments">My Appointments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Prescriptions" asp-action="MyPrescriptions">My Prescriptions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="LabTests" asp-action="MyLabTests">My Lab Tests</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Billing" asp-action="MyBilling">My Billing</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Patients" asp-action="MyDetails">My Details</a>
                            </li>
                            <!-- Add other Patient-specific links here -->
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-dark me-2">Hello, @User.Identity.Name!</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Hospital_Managment_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
