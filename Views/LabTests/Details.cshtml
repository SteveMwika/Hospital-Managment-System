@model Hospital_Managment_System.Models.LabTest

@{
    ViewData["Title"] = "Lab Test Details";
}

<h2>Lab Test Details</h2>

<div class="card">
    <div class="card-header">
        <strong>Test Details</strong>
    </div>
    <div class="card-body">
        <p><strong>Test Name:</strong> @Model.TestName</p>
        <p><strong>Test Result:</strong> @Model.TestResult</p>
        <p><strong>Test Date:</strong> @Model.TestDate.ToString("yyyy-MM-dd")</p>
        <p><strong>Completed:</strong> @(Model.IsCompleted ? "Yes" : "No")</p>
        <p><strong>Comments:</strong> @Model.Comments</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-primary">Back to List</a>
