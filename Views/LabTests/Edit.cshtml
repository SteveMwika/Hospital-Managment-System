@using Hospital_Managment_System.Enums
@model Hospital_Managment_System.Models.LabTest

@{
    ViewData["Title"] = "Edit Lab Test";
}

<h2>Edit Lab Test</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="TestName" class="form-label">Test Name</label>
        <select asp-for="TestName" class="form-select" asp-items="@(new SelectList(Enum.GetValues(typeof(LabTestName)).Cast<LabTestName>()))">
            <option value="">-- Select Test --</option>
        </select>
        <span asp-validation-for="TestName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TestResult" class="form-label">Test Result</label>
        <textarea asp-for="TestResult" class="form-control"></textarea>
        <span asp-validation-for="TestResult" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TestDate" class="form-label">Test Date</label>
        <input asp-for="TestDate" class="form-control" type="date" />
        <span asp-validation-for="TestDate" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
        <label asp-for="IsCompleted" class="form-check-label">Is Completed</label>
        <span asp-validation-for="IsCompleted" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Comments" class="form-label">Comments</label>
        <textarea asp-for="Comments" class="form-control"></textarea>
        <span asp-validation-for="Comments" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
