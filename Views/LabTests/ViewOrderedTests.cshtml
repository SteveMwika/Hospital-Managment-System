@model IEnumerable<Hospital_Managment_System.Models.LabTest>

@{
    ViewData["Title"] = "Ordered Lab Tests";
}

<h2>Ordered Lab Tests</h2>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Test Name</th>
                <th>Test Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in Model)
            {
                <tr>
                    <td>@test.TestName</td>
                    <td>@test.TestDate.ToString("MMMM dd, yyyy")</td>
                    <td>
                        <a asp-action="ViewTestResults" asp-route-id="@test.Id" class="btn btn-info">View Results</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No tests have been ordered for this patient yet.</p>
}
