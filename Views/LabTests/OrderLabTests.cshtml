@{
    ViewData["Title"] = "Order Lab Tests";
}

<h2 class="text-center">Order Lab Tests for Appointment</h2>

<!-- Form for selecting and submitting lab tests -->
<form asp-action="OrderMultipleTests" method="post">
    <input type="hidden" name="appointmentId" value="@ViewBag.AppointmentId" />

    <div class="row">
        <div class="col-md-6">
            <h4>Available Lab Tests</h4>
            <ul id="available-tests" class="list-group">
                @foreach (var test in Enum.GetValues(typeof(Hospital_Managment_System.Enums.LabTestName)).Cast<Hospital_Managment_System.Enums.LabTestName>())
                {
                    <li class="list-group-item">
                        <input type="checkbox" name="selectedTests" value="@test" /> @test
                    </li>
                }
            </ul>
        </div>

        <div class="col-md-6">
            <h4>Selected Lab Tests</h4>
            <ul id="selected-tests" class="list-group">
                <!-- This will show the selected tests -->
            </ul>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Submit Orders</button>
</form>

@section Scripts {
    <script>
        // Add your JavaScript to handle the selection and deselection of tests here.
    </script>
}
