@model Hospital_Managment_System.Models.Doctor

@{
    ViewData["Title"] = "Doctor Details";
}

<h1>Doctor Details</h1>

<div>
    <h4>Doctor</h4>
    <hr />
    <dl class="row">
        <!-- First Name -->
        <dt class="col-sm-2">
            First Name
        </dt>
        <dd class="col-sm-10">
            @Model.FirstName
        </dd>
        <!-- Last Name -->
        <dt class="col-sm-2">
            Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.LastName
        </dd>
        <!-- Birth Date -->
        <dt class="col-sm-2">
            Birth Date
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate.ToString("yyyy-MM-dd")
        </dd>
        <!-- Gender -->
        <dt class="col-sm-2">
            Gender
        </dt>
        <dd class="col-sm-10">
            @Model.Gender
        </dd>
        <!-- Email -->
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <!-- Phone -->
        <dt class="col-sm-2">
            Phone
        </dt>
        <dd class="col-sm-10">
            @Model.Phone
        </dd>
        <!-- Specialization -->
        <dt class="col-sm-2">
            Specialization
        </dt>
        <dd class="col-sm-10">
            @Model.Specialization
        </dd>
        <!-- Status -->
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
        <!-- Department -->
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.Department?.Name ?? "No Department"
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    @if (User.IsInRole("Admin") || (User.IsInRole("Doctor") && User.Identity.Name == Model.Email))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    }
</div>
