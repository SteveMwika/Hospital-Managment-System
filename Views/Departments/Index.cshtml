@model IEnumerable<Hospital_Managment_System.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2 class="text-center">Departments</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Department Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Department</a>
