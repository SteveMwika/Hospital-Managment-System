@model Hospital_Managment_System.ViewModels.DoctorCreateAppointmentViewModel

@{
    ViewData["Title"] = "Create Appointment";
}

<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DoctorName"></label>
        <input asp-for="DoctorName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="PatientId"></label>
        <select asp-for="PatientId" asp-items="Model.PatientsList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="AppointmentStatus"></label>
        <select asp-for="AppointmentStatus" class="form-control">
            @foreach (var status in Enum.GetValues(typeof(Hospital_Managment_System.Enums.AppointmentStatus)))
            {
                <option value="@status">@status.ToString()</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
