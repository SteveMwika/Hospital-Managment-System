@model Hospital_Managment_System.ViewModels.PatientCreateAppointmentViewModel

@{
    ViewData["Title"] = "Create Appointment";
}

<h2>Create Appointment</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientName"></label>
        <input asp-for="PatientName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="DoctorId"></label>
        <select asp-for="DoctorId" asp-items="Model.DoctorsList" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="AppointmentDate"></label>
        <input asp-for="AppointmentDate" class="form-control" type="datetime-local" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
